# 1. Создание файлов и объединение их
echo -e "Собаки\nКошки\nХомяки" > Домашние_животные.txt
echo -e "Лошади\nВерблюды\nОслы" > Вьючные_животные.txt
cat Домашние_животные.txt Вьючные_животные.txt > Все_животные.txt
cat Все_животные.txt
mv Все_животные.txt Друзья_человека.txt

# 2. Создание директории и перемещение файла
mkdir Животные
mv Друзья_человека.txt Животные/

# 3. Подключение репозитория MySQL и установка пакета
sudo add-apt-repository ppa:ondrej/php
sudo apt update
sudo apt install mysql-server

# 4. Установка и удаление deb-пакета
sudo dpkg -i имя_пакета.deb
sudo dpkg -r имя_пакета

# 5. Вывод истории команд
history

# 6. Диаграмма классов (представлена в текстовом виде)
# Родительский класс
# ├── Домашние животные
# │   ├── Собаки
# │   ├── Кошки
# │   └── Хомяки
# └── Вьючные животные
#     ├── Лошади
#     ├── Верблюды
#     └── Ослы

# 7. Создание базы данных
mysql -u root -p -e "CREATE DATABASE Друзья_человека;"

# 8. Создание таблиц
mysql -u root -p Друзья_человека -e "
CREATE TABLE Домашние_животные (id INT AUTO_INCREMENT PRIMARY KEY, имя VARCHAR(255), команда VARCHAR(255), дата_рождения DATE);
CREATE TABLE Вьючные_животные (id INT AUTO_INCREMENT PRIMARY KEY, имя VARCHAR(255), команда VARCHAR(255), дата_рождения DATE);
"

# 9. Заполнение таблиц
mysql -u root -p Друзья_человека -e "
INSERT INTO Домашние_животные (имя, команда, дата_рождения) VALUES ('Собака', 'Сидеть', '2021-01-01');
INSERT INTO Вьючные_животные (имя, команда, дата_рождения) VALUES ('Лошадь', 'Бежать', '2020-05-01');
"

# 10. Удаление верблюдов и объединение таблиц
mysql -u root -p Друзья_человека -e "
DELETE FROM Вьючные_животные WHERE имя = 'Верблюд';
CREATE TABLE Объединенные_животные AS SELECT * FROM Вьючные_животные WHERE имя IN ('Лошадь', 'Осел');
"

# 11. Создание таблицы "молодые животные"
mysql -u root -p Друзья_человека -e "
CREATE TABLE Молодые_животные AS SELECT *, TIMESTAMPDIFF(MONTH, дата_рождения, CURDATE()) AS возраст FROM Домашние_животные WHERE YEAR(CURDATE()) - YEAR(дата_рождения) BETWEEN 1 AND 3;
"

# 12. Объединение всех таблиц
mysql -u root -p Друзья_человека -e "
CREATE TABLE Все_животные AS SELECT * FROM Домашние_животные UNION ALL SELECT * FROM Вьючные_животные;
"

# 13. Создание класса с инкапсуляцией и наследованием
# (представлено в текстовом виде)
# class Животное {
#   private String имя;
#   public void setИмя(String имя) { this.имя = имя; }
#   public String getИмя() { return имя; }
# }
# class ДомашниеЖивотные extends Животное { ... }
# class ВьючныеЖивотные extends Животное { ... }

# 14. Программа для реестра домашних животных
# (представлено в текстовом виде)
# public class Реестр {
#   public void завестиНовоеЖивотное() { ... }
#   public void определитьКласс() { ... }
